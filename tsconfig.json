{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node20",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "outDir": "dist",
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "frontend",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "allowImportingTsExtensions": true
    },
    "include": [
        "frontend/**/*",
        "crates/wasm/pkg/**/*",
        "vite.config.ts",
        "vitest.setup.ts",
    ],
    "types": [
        "vitest/globals",
        "@testing-library/jest-dom"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}